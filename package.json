{
  "name": "react-d3-electron",
  "version": "0.2.0",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thibaudcolas/react-d3-electron.git"
  },
  "bugs": {
    "url": "https://github.com/thibaudcolas/react-d3-electron/issues"
  },
  "homepage": "https://thibaudcolas.github.io/react-d3-electron/",
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "proseWrap": "preserve"
  },
  "devDependencies": {
    "electron": "^1.8.2",
    "electron-debug": "^1.5.0",
    "electron-packager": "^11.0.1",
    "react-scripts": "1.1.1"
  },
  "dependencies": {
    "d3": "^3.5.0",
    "flow-bin": "^0.66.0",
    "lunr": "^0.6.0",
    "normalize.css": "^8.0.0",
    "prettier": "^1.10.2",
    "react": "^16.2.0",
    "react-autosuggest": "^9.3.4",
    "react-dom": "^16.2.0",
    "react-modal": "^3.2.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && source-map-explorer --html build/static/js/main.* > public/source-map-explorer.html",
    "test": "yarn run test:coverage -s",
    "test:coverage": "react-scripts test --env=jsdom --coverage",
    "test:watch": "react-scripts test --env=jsdom",
    "linter:css": "prettier --list-different",
    "linter:md": "prettier --list-different",
    "dist": "CI=true yarn run build -s",
    "flow": "flow",
    "report:coverage": "open coverage/lcov-report/index.html",
    "report:build": "open public/source-map-explorer.html",
    "formatter": "prettier --write",
    "lint": "yarn run linter:css -s -- src/**/*.css && yarn run linter:md -s -- '**/*.md'",
    "format": "yarn run formatter -s -- '**/*.md' src/**/*.js src/**/*.css",
    "test:ci": "yarn run lint -s && yarn run flow -s && yarn run dist -s && yarn run test:coverage -s -- --outputFile build/test-results.json --json"
  }
}
